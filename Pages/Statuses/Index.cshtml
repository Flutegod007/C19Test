@page
@model C19Test.Pages.Statuses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status[0].StatusID)  
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Status) {
        <tr>
            <td>         
                @Html.DisplayNameFor(modelItem => item.StatusID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.StatusID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.StatusID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.StatusID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
